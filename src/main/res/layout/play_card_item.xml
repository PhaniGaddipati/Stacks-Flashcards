<?xml version="1.0" encoding="utf-8"?>

<org.centum.android.play.PlayCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/play_relativelayout"
        android:layout_alignParentLeft="false"
        android:background="@drawable/card_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/title_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_scrollView"
            android:layout_below="@+id/title_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="55dp"
            android:visibility="gone"
            android:fillViewport="false"
            android:layout_above="@+id/imageView"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="55dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/details_textView"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/title_textView"
                android:textSize="22sp"
                android:alpha="0.0"
                android:layout_above="@+id/imageView" />
        </ScrollView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:maxHeight="100dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/correct_imageButton"
            android:src="@drawable/correct"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/wrong_imageButton"
            android:layout_alignParentRight="true"
            android:alpha=".25" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/wrong_imageButton"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/wrong"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:alpha=".25" />

    </RelativeLayout>

</org.centum.android.play.PlayCardView>